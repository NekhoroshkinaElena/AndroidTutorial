<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snow">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvThemeName"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:outlineAmbientShadowColor="@color/light_gray"
        android:outlineSpotShadowColor="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvThemeName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:fontFamily="@font/pt_serif_caption_regular"
            android:text="Тема для изучения" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
